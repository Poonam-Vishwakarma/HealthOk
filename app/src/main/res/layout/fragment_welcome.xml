<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.WelcomeFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="HealthOk"
    android:textSize="27sp"
    android:textStyle="bold"
    android:textColor="#009688"
    android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's get started!"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login to enjoy the features we've                            provided, and stay healthy"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/welcome_patientButton"
        android:text="Patient"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/primary" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:id="@+id/welcome_doctorButton"
        android:text="Doctor"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />





</LinearLayout>


</LinearLayout>